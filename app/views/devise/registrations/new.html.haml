%main.page.d-flex.justify-content-center.align-items-center
  .clean-block.user-new{style: "width: 100%;height: 800px;"}
    .container
      .row
        .block-content.hidden-sm.col-lg-6.col-md-6
          = image_tag '43cc71bb1b43.png'
        .block-content.col-md-6.col-sm-12.col-lg-6.mb-3
          .block.bg-white.p-4
            %h2.text-center Instadium
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              = devise_error_messages!
              .form-group.pb-2
                .field
                  = f.label :username
                  = f.text_field :username, autocomplete: "username", class: "form-control"
                .field
                  = f.label :email
                  = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
                .field
                  = f.label :password
                  - if @minimum_password_length
                    %em
                      (#{@minimum_password_length} characters minimum)
                  = f.password_field :password, autocomplete: "off", class: "form-control"
                .field
                  = f.label :password_confirmation
                  = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
                .field
                  = f.label :avatar, "アバター:"
                  = f.file_field :avatar, class: "form-control"
              .actions
                = f.submit "登録する", class: "form-group btn btn-primary btn-block"
          %p.text-center.bg-white.mt-3.p-3
            アカウントをお持ちですか？
            = render "devise/shared/links"
